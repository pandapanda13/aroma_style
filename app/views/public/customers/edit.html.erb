<div class="bc">
<div class="container">
  <div class="row">
   <div class="col-sm-10 offset-sm-2 mt-4">
     <p class="h5 text-secondary">マイページ編集</p>
   </div>
   <div class="h6 offset-sm-4 text-danger">
    <% if @customer.errors.any? %>
     <% @customer.errors.full_messages.each do |message| %>
       <%= content_tag :div, message %>
     <% end %>
    <% end %>
 </div>
   <div class="h6 offset-sm-2 text-danger">
    <% if @customer.errors.any? %>
     <% flash.each do |message_type, message| %>
     <%= content_tag :div, message, class: message_type %>
     <% end %>
    <% end %>
   </div>
  </div>
   <%= form_with model: @customer, url: customers_update_path, local:true do |f| %>
    <div class="row">
       <label for="name": class="col-sm-2 offset-sm-2 mt-3 text-secondary">氏名</label>
       <div class="col-sm-8 mt-3"><%= f.text_field :name %></div>
    </div>
    <div class="row">
       <label for="name_kana": class="col-sm-2 offset-sm-2 mt-3 text-secondary">フリガナ</label>
       <div class="col-sm-8 mt-3"><%= f.text_field :name_kana %></div>
    </div>
    <div class="row">
       <label for="name_kana": class="col-sm-2 offset-sm-2 mt-3 text-secondary">表示名</label>
       <div class="col-sm-8 mt-3"><%= f.text_field :nickname %></div>
    </div>
    <div class="row">
       <label for="postal_code": class="col-sm-2 offset-sm-2 mt-3 text-secondary">郵便番号</label>
       <div class="col-sm-8 mt-3"><%= f.text_field :postal_code %></div>
    </div>
    <div class="row">
       <label for="address": class="col-sm-2 offset-sm-2 mt-3 text-secondary">住所</label>
       <div class="col-sm-8 mt-3"><%= f.text_field :address, size: "40" %></div>
    </div>
    <div class="row">
       <label for="telephone_number": class="col-sm-2 offset-sm-2 mt-3 text-secondary">電話番号</label>
       <div class="col-sm-8 mt-3"><%= f.text_field :telephone_number %></div>
    </div>
    <div class="row">
       <label for="email": class="col-sm-2 offset-sm-2 mt-3 text-secondary">メールアドレス</label>
       <div class="col-sm-8 mt-3"><%= f.text_field :email %></div>
    </div>
    <div class="row">
      <div class="col-sm-2 offset-sm-4 mt-4">
        <%= f.submit :編集内容を保存, class: 'btn btn-outline-success py-2 px-3' %>
      </div>

    </div>

    <% end %>
</div>
</div>
