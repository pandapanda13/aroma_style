<div class="bc">
<div class="container">
  <div class="row">
    <p class="title offset-2 h4 px-3 mb-4 text-secondary">商品一覧</p>
  </div>
  <div class="row">
    <div class="offset-2 col-8 mb-4">
      <%= search_form_for @a, url: items_search_path	 do |f| %>
        <%= f.search_field :name_or_introduction_cont, placeholder: 'search' %>
        <%= f.button :type => "submit", style: 'border-style: none;' do %>
         <i class='fa-solid fa-magnifying-glass'></i>
       <% end %>

      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="items col-9 offset-2">
    <% @items.each do |item| %>
      <%= link_to item_path(item) do %>
      <div class="image mb-2 mr-5">
        <%= image_tag item.image_id, size: "220x180" %>
      </div>
      <p><%= item.name %><%= item.volume %></p>
      <p><%= item.price %>円</p>
      <% end %>
    <% end %>
    </div>
    <div class="pagination col-8 offset-2">
    <%= paginate @items %>
    </div>
  </div>
</div>
</div>