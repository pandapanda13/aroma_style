<div class="container">
  <div class="row">
    <p class=" offset-2 h4 px-3 mb-4 grey">Products</p>
  </div>


  <div class="row">
    <div class="items col-9 offset-2">
    <% @items.each do |item| %>
      <%= link_to item_path(item) do %>
      <div class="image mb-2 mr-5">
        <%= image_tag item.image_id, size: "220x180" %>
      </div>
      <p><%= item.name %><%= item.volume %></p>
      <p><%= item.price %>å††</p>
      <% end %>
    <% end %>
    </div>
  </div>

</div>
