 <div class="container">
  <p class="title offset-sm-2 h4 pt-3 text-secondary">検索結果一覧</p>
  <div class="row offset-sm-2 my-5">
   <div class="item-result-card card-deck">
     <% if @results.length !=0 %>
       <% @results.each do |result| %>
       <div class="mx-3">
         <%= link_to item_path(result.id), class: "link-line" do %>
         <div class="image mb-1"><%= image_tag result.image_id, size: "220x180" %></div>
         <p><%= result.name %><%=" "%><%= result.volume %><%=" "%><%= result.price %>円</p>
         <% end %>
       </div>
       <% end %>
      <% else %>
        <h5 class="alert text-secondary">該当する商品はありません</h5>
      <% end %>
   </div>
  </div>
</div>

