<div class="bc">
<div class="container">
  <div class="row">
    <div class="col-4 offset-1">
      <p class="title h4 text-secondary">新規会員登録</p>
    </div>
  </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col-3 offset-1 mt-3 text-secondary"><label for="name">お名前</label></div>
    <div class="col-5 mt-3"><%= f.text_field :name, autofocus: true, autocomplete: "name" %></div>
  </div>

  <div class="row">
    <div class="col-3 offset-1 mt-3 text-secondary"><label for="name_kana">フリガナ</label></div>
    <div class="col-5 mt-3"><%= f.text_field :name, autofocus: true, autocomplete: "name_kana" %></div>
  </div>

  <div class="row">
    <div class="col-3 offset-1 mt-3 text-secondary"><label for="name_kana">表示名(レビュー投稿用)</label></div>
    <div class="col-5 mt-3"><%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %></div>
  </div>

  <div class="row">
    <div class="col-3 offset-1 mt-3 text-secondary"><label for="email">メールアドレス</label></div>
    <div class="col-5 mt-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
  </div>

  <div class="row">
    <div class="col-3 offset-1 mt-3 text-secondary"><label for="name_kana">郵便番号</label></div>
    <div class="col-5 mt-3"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></div>
  </div>

  <div class="row">
    <div class="col-3 offset-1 mt-3 text-secondary"><label for="name_kana">住所</label></div>
    <div class="col-5 mt-3"><%= f.text_field :address, autofocus: true, autocomplete: "address", size: "50" %></div>
  </div>

  <div class="row">
    <div class="col-3 offset-1 mt-3 text-secondary"><label for="name_kana">電話番号</label></div>
    <div class="col-5 mt-3"><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></div>
  </div>

　<div class="row">
    <div class="col-3 offset-1 mt-2 text-secondary"><label for="name_kana">パスワード</label><br><% if @minimum_password_length %>
     <em>(<%= @minimum_password_length %> 字以上)</em><% end %></div>
    <div class="col-5 mt-3"><%= f.password_field :password, autocomplete: "new-password" %></div>
  </div>

  <div class="row">
    <div class="col-3 offset-1 mt-2 text-secondary"><label for="name_kana">パスワード<br>(確認用)</label></div>
    <div class="col-5 mt-3"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
  </div>

 <div class="row">
   <div class="actions col-5 offset-4">
     <%= f.submit "登録", class: 'btn btn-outline-success btn-block' %>
   </div>
 </div>
  <% end %>
 </div>
</div>
</div>




