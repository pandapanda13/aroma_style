<div class="container">
  <div class="row">
    <div class="col-sm-11">
    <p class="h4 text-secondary px-4">ログイン</p>
  </div>
  <h4 class="text-danger offset-sm-1"><%= flash[:error] %></h4>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-sm-3 offset-sm-1 mt-4 text-secondary"><%= f.label :メールアドレス %></div>
    <div class="sign-in-form col-sm-6 mt-4"><%= f.email_field :email, size: "35",autofocus: true, autocomplete: "email" %></div>


    <div class="col-sm-3 offset-sm-1 mt-4 text-secondary"><%= f.label :パスワード %></div>
    <div class="sign-in-form col-sm-6 mt-4"><%= f.password_field :password, size: "35", autocomplete: "current-password" %></div>
  </div>

  <div class="row">
    <div class="col-sm-3 offset-sm-4 mt-4">
    <%= f.submit "ログイン", class: "btn btn-outline-success  mt-4" %>
    </div>
  </div>

　 <div class="row mb-5">
    <div class="col-sm-11 offset-sm-1">
     <p class="h5 mt-4 text-secondary">初めてご利用の方</p>
     <%= link_to "新規会員登録", new_customer_registration_path, class: 'btn btn-outline-success' %><br>
     <p class="text-secondary mt-2">※お買い物をして頂くには会員登録が必要です</p>
   </div>
 </div>
<% end %>
</div>
