<div class="conteiner">
  <div class="row">
   <p class="h5 col-sm-6 offset-sm-2 text-secondary mt-4 mb-4">注文履歴一覧</p>
  </div>
  <div class="table-responsive pb-5">
  <table class="table-bordered table-responsive-sm col-sm-8 offset-sm-2 center-block">
    <thead>
      <tr class="text-center text-secondary">
        <th class="py-2 px-2">購入日時</th>
        <th class="py-2 px-2">購入者</th>
        <th class="py-2 px-2">注文個数</th>
        <th class="py-2 px-2">発送ステータス</th>
      </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr class="text-center">
        <td class="py-2 px-2"><%= link_to admin_order_path(order), class: "link-line" do %>
            <%= order.created_at.strftime('%Y/%m/%d/%H:%M:%S') %>
            <% end %></td>
        <td class="py-2 px-2"><%= order.customer.name %>  様</td>
        <td class="py-2 px-2"><%= order.order_details.sum(:amount) %></td>
        <td class="py-2 px-2"><%= order.shipping_status_i18n %></td>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  </div>
</div>