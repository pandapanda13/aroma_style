<div class="container">
 <div class="row">
  <p class="h4 col-sm-4 offset-sm-2 text-secondary mb-4">商品新規登録</p>
 </div>


<%= form_with model: @item, url:admin_items_path, local:true do |f| %>
<div class="row">
 <div class="col-sm-2 offset-sm-3 mt-4 text-secondary">
   <p>商品画像</p>
 </div>
 <div class="col-sm-4 mt-4">
   <%= f.file_field :image_id, accept: "image/*" %>
 </div>
</div>

<div class="row">
 <div class="col-sm-2 offset-sm-3 text-secondary">
  <p>商品名</p>
 </div>
 <div class="col-sm-4">
  <%= f.text_field :name, size: "35"%>
 </div>
</div>

<div class="row">
 <div class="col-sm-2 offset-sm-3 text-secondary">
  <p>容量</p>
 </div>
 <div class="col-sm-4">
  <p><%= f.text_field :volume, size: "20" %> ml</p>
 </div>
</div>

<div class="row">
 <div class="col-sm-2 offset-sm-3 text-secondary">
  <p>商品説明</p>
 </div>
 <div class="col-sm-4">
  <%= f.text_area :introduction, size: "34"%>
 </div>
</div>

<div class="row">
 <div class="col-sm-2 offset-sm-3 text-secondary">
  <p>おすすめブレンド</p>
 </div>
 <div class="col-sm-4">
  <%= f.text_area :blend_example, size: "34"%>
 </div>
</div>

<div class="row">
 <div class="col-sm-2 offset-sm-3 text-secondary">
  <p>税抜価格</p>
 </div>
 <div class="col-sm-5">
  <p><%= f.text_field :price, size: "20" %> 円</p>
 </div>
</div>
<div class="col-sm-4 offset-sm-5">
 <%= f.radio_button :blend_flag, true %>
 <%= f.label :blend_flag, "ブレンド商品", value: true %>
 <%= f.radio_button :blend_flag,false %>
 <%= f.label :blend_flag, "通常商品", value: false %>
</div>

<div class="col-sm-2 offset-sm-5 py-5">
 <%= f.submit :新規登録, class: 'btn btn-outline-success  px-5 px-3' %>
</div>

<% end %>
</div>
















