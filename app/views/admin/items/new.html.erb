<div class="container">
 <div class="row">
  <p class="title col-4 offset-1 px-">商品新規登録</p>
 </div>
</div>

<%= form_with model: @item




, url:admin_items_path, local:true do |f| %>
<div class="row">
 <div class="col-2 offset-2">
   <p class="item-title">商品画像</p>
 </div>
 <div class="col-4">
   <%= f.file_field :image_id, accept: "image/*" %>
 </div>
</div>

<div class="row">
 <div class="col-2 offset-2">
  <p class="item-title">商品名</p>
 </div>
 <div class="col-4">
  <%= f.text_field :name, size: "35"%>
 </div>
</div>

<div class="row">
 <div class="col-2 offset-2">
  <p class="item-title">容量</p>
 </div>
 <div class="col-4">
  <%= f.text_field :volume, size: "35"%>
 </div>
</div>

<div class="row">
 <div class="col-2 offset-2">
  <p class="item-title">商品説明</p>
 </div>
 <div class="col-4">
  <%= f.text_area :introduction, size: "34"%>
 </div>
</div>

<div class="row">
 <div class="col-2 offset-2">
  <p class="item-title">税抜価格</p>
 </div>
 <div class="col-4">
  <%= f.text_field :price, size: "35" %>円
 </div>
</div>
<div class="col-2 offset-4">
 <%= f.radio_button :blend_flag, class: true %>
 <%= f.label :blend_flag,"ブレンド商品", value: true %>
 <%= f.radio_button :blend_flag, class: false %>
 <%= f.label :blend_flag,"通常商品", value: false %>
</div>

<div class="col-2 offset-4">
 <%= f.submit :新規登録, class: 'btn btn-outline-success  px-5 px-3' %>
</div>

<% end %>















